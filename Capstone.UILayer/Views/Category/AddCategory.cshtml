@model Capstone.EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_CapstoneLayout.cshtml";
}

<h1>New Category</h1>
<form method= "post">
    <label>Category Name</label>
    <input type="text" asp-for="CategoryName" class="form-control"/> <br />
    <label>Category Description</label>
    <input type="text" asp-for="CategoryDescription" class="form-control"/> <br />
    <button class="btn btn-primary">Save</button>
</form>

